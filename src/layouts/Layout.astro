---
interface Props {
  title?: string;
}
const { title = 'Portafolio' } = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <!-- Tipografía limpia (Inter) -->
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <style>
      :root { color-scheme: dark; }
      html, body { height: 100%; }
      body {
        margin: 0;
        font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
        /* degradado muy sutil */
        background: radial-gradient(1200px 800px at 20% -10%, #101737 0%, transparent 60%),
                    radial-gradient(900px 700px at 120% 10%, #0e1a34 0%, transparent 55%),
                    #0b1020;
        color: #e7e9ee;
      }
      a { color: inherit; }
      main { max-width: 1200px; margin: 0 auto; padding: 1rem; }
      footer { color:#9aa3b9; border-top:1px solid #1b2240; margin-top:3rem; padding:1rem 0; }
      /* Contenedor util */
      .wrap { max-width: 1100px; margin: 0 auto; padding: 0 1rem; }
    </style>
  </head>
  <body>
    <main>
      <slot />
    </main>
    <footer class="wrap">© {new Date().getFullYear()} Sebastián — Cajamarca, Perú</footer>
  </body>
</html>
